<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="#10596c"
    tools:context=".fourthactivity"
    >

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:text="2 of 3"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/progress"
        android:layout_margin="16dp"
        android:progress="66"
        android:progressTint="#FFFFFF" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's the most important to you when cooking?"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/progressBar"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose two below!"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@id/question"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want healthy options"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/subtitle"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />


    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want comfort food"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/checkbox1"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />


    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want easy recipes"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/checkbox2"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to meal prep"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@color/white"
        android:layout_below="@id/checkbox3"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />


    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want something sweet"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@color/white"
        android:layout_below="@id/checkbox4"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />


    <CheckBox
        android:id="@+id/checkbox6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to be adventurous"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/checkbox5"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:backgroundTint="#E91E63"
        android:text="Next"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />




</RelativeLayout>
