<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#10596c"
    tools:context=".thirdactivity">

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:text="1 of 3"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/progress"
        android:layout_margin="16dp"
        android:progress="33"
        android:progressTint="#FFFFFF" />
    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="Are you a vegetarian?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#054E59"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/pic1"
                android:layout_marginEnd="16dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nopeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nope, show me all recipes"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#054E59"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/pic2"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <TextView
                android:id="@+id/yesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes, hide recipes with meat"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
